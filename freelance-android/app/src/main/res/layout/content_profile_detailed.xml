<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:visibility="gone"
    android:id="@+id/mainLayout"
    android:paddingBottom="10dp"
    android:orientation="vertical"
    android:layout_marginBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:id="@+id/library_decimal_ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:stepSize="0.01"
            android:numStars="5"
            android:layout_alignParentLeft="true"
            android:rating="0.5"
            android:layout_marginTop="15dp"
            app:mrb_progressTint="@color/colorPrimaryDark"
            app:mrb_secondaryProgressTint="@color/colorPrimaryDark"
            style="@style/Widget.MaterialRatingBar.RatingBar.Indicator" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="end"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:id="@+id/linearLayoutTopMenu">


            <ImageView
                android:id="@+id/comment"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/feedback_submit"
                android:layout_margin="7dp"/>


            <ImageView
                android:id="@+id/content_profile_detailed_call"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/call"
                android:layout_margin="7dp"/>

            <ImageView
                android:id="@+id/abuse"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/abuse"
                android:layout_margin="7dp"/>

            <com.like.LikeButton
                android:id="@+id/home_card_favouriteBtn"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                app:icon_size="20dp"
                app:anim_scale_factor="3"/>
        </LinearLayout>


    </RelativeLayout>




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CATEGORY"
        android:textSize="@dimen/subtitle"
        android:textColor="@color/mediumGray"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:paddingLeft="2dp"
        android:layout_margin="2dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"/>
    <TextView
        android:id="@+id/profileDetails_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="18sp"
        android:text="category 1\ncategory 2\ncategory 3"
        android:layout_marginBottom="15dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QUALIFICATION"
            android:textSize="@dimen/subtitle"
            android:textColor="@color/mediumGray"
            android:textStyle="bold"
            android:paddingLeft="2dp"
            android:layout_margin="2dp"
            android:layout_toLeftOf="@+id/profileDetails_highestQualification_toggleIcon"
            android:layout_toStartOf="@+id/profileDetails_highestQualification_toggleIcon" />

        <ImageView
            android:id="@+id/profileDetails_highestQualification_toggleIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@android:drawable/arrow_down_float"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"/>


        <TextView
            android:id="@+id/profileDetails_highestQualification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="18sp"
            android:layout_marginBottom="15dp"
            android:text="Highest Qualification"
            />
        <TextView
            android:inputType="textMultiLine"
            android:layout_margin="10dp"
            android:id="@+id/profileDetails_qualifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="10dp"
            android:textSize="18sp"
            android:visibility="gone"/>


    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EXPERIENCE"
        android:textSize="@dimen/subtitle"
        android:textColor="@color/mediumGray"
        android:textStyle="bold"
        android:paddingLeft="2dp"
        android:layout_margin="2dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"/>

    <TextView
        android:id="@+id/profileDetails_Experience"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="18sp"
        android:layout_marginBottom="15dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADDRESS"
            android:textSize="@dimen/subtitle"
            android:textColor="@color/mediumGray"
            android:textStyle="bold"
            android:paddingLeft="2dp"
            android:layout_margin="2dp"
            android:layout_toLeftOf="@+id/profileDetails_Address_mapicon"
            android:layout_toStartOf="@+id/profileDetails_Address_mapicon" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:tint="@color/fbutton_color_green_sea"
            android:id="@+id/profileDetails_Address_mapicon"
            android:src="@android:drawable/ic_dialog_map"/>
     </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"/>

        <TextView
            android:id="@+id/profileDetails_Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="category 1\ncategory 2\ncategory 3"
            android:layout_marginBottom="30dp"
            android:textSize="18sp"
            />

</LinearLayout>