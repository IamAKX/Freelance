<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.akash.applications.freelance.ProjectPushing.PostedProjectDetails">

    <ScrollView
        android:id="@+id/sv1"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="350dp">

        <LinearLayout
            android:id="@+id/postedProjectLL1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center_horizontal"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="8">

                <TextView
                    android:layout_weight="7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/pName"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="Name"
                    android:gravity="start"
                    android:padding="5dp"/>

                <Switch
                    android:id="@+id/closeProjectSwitch"
                    android:checked="true"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="2dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="2dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/desc_small"
                            android:tint="@color/gray" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:paddingLeft="2dp"
                            android:text="DESCRIPTION"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/subtitle"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/pDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="32dp"
                        android:layout_marginRight="10dp"
                        android:text="Desc"
                        android:textSize="17sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/duration"
                            android:tint="@color/gray" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:paddingLeft="2dp"
                            android:text="PROJECT DURATION"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/subtitle"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/pDuration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="32dp"
                        android:layout_marginRight="10dp"
                        android:text="Desc"
                        android:textSize="17sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/deadline"
                            android:tint="@color/gray" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:paddingLeft="2dp"
                            android:text="COMPLETION DEADLINE"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/subtitle"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/pDeadline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="32dp"
                        android:layout_marginRight="10dp"
                        android:text="Desc"
                        android:textSize="17sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/posted_on"
                            android:tint="@color/gray" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:paddingLeft="2dp"
                            android:text="PROJECT POSTED ON"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/subtitle"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/pPostedOn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="32dp"
                        android:layout_marginRight="10dp"
                        android:text="Desc"
                        android:textSize="17sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/status"
                            android:tint="@color/gray" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:paddingLeft="2dp"
                            android:text="PROJECT STATUS"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/subtitle"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/pStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="32dp"
                        android:layout_marginRight="10dp"
                        android:text="Desc"
                        android:textSize="17sp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_below="@+id/sv1"
        android:id="@+id/timmerTextview"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_below="@+id/timmerTextview"
        android:id="@+id/ll2"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/nobodyready"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INTRESTED PARTICIPANTS"
            android:textSize="@dimen/subtitle"
            android:textColor="@color/mediumGray"
            android:textStyle="bold"
            android:paddingLeft="2dp"
            android:layout_margin="2dp"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/postedProjectRecyclerView"
            android:clipChildren="true"
            android:scrollbars="none"
            tools:listitem="@layout/accepeted_user_list_item">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
    <com.eyalbira.loadingdots.LoadingDots
        android:id="@+id/postedProjectLoadingDots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:LoadingDots_dots_color="#9e9e9e"
        app:LoadingDots_loop_start_delay="0"
        app:LoadingDots_dots_count="4"/>

</RelativeLayout>
