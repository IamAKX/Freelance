<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/themed_background"
    android:layout_margin="10dp"
    tools:context="com.akash.applications.freelance.MenuFragments.Notification">

    <android.support.v7.widget.RecyclerView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:id="@+id/taskList"
        android:clipChildren="true"
        tools:listitem="@layout/all_project_list_item"/>

    <com.eyalbira.loadingdots.LoadingDots
        android:layout_gravity="bottom"
        android:id="@+id/NotificationListloadingDots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:LoadingDots_dots_color="#9e9e9e"
        app:LoadingDots_loop_start_delay="0"
        app:LoadingDots_dots_count="4"/>


</RelativeLayout>
