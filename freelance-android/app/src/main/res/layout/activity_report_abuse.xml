<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/themed_background"
    tools:context="com.akash.applications.freelance.ReportAbuse">

    <EditText
        android:padding="10dp"
        android:gravity="start"
        android:inputType="textCapSentences"
        android:id="@+id/msg"
        android:textSize="18sp"
        android:hint="Type your feedback here"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/send"
        android:background="@drawable/abude_edittext_background"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/send"
        android:background="@drawable/button_holo_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textSize="18sp"
        android:text="SEND"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        />

</RelativeLayout>
