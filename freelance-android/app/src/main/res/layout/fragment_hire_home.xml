<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:paddingRight="10dp"
    android:paddingBottom="10dp"
    tools:context="com.akash.applications.freelance.MenuFragments.HireHome">

    <jp.co.recruit_lifestyle.android.widget.WaveSwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/hire_home_swipe_refresh">

        <android.support.v7.widget.RecyclerView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:scrollbars="none"
            android:layout_marginRight="10dp"
            android:id="@+id/hire_home_recyclerview"
            android:clipChildren="true"
            tools:listitem="@layout/home_menu_card"/>

    </jp.co.recruit_lifestyle.android.widget.WaveSwipeRefreshLayout>

    <com.eyalbira.loadingdots.LoadingDots
        android:id="@+id/hire_home_loading_dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:LoadingDots_dots_color="#9e9e9e"
        app:LoadingDots_loop_start_delay="0"
        app:LoadingDots_dots_count="4"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/postProjectFAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/fab_margin"
        android:background="@color/colorPrimaryDark"
        android:src="@drawable/post_project"
        android:tint="@color/white"/>


</RelativeLayout>
